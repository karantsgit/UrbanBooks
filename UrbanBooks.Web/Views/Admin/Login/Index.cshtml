@{
    Layout = null;
}
@using UrbanBooks.Common
@using System.Web.Optimization;
@using UrbanBooks.Web.Resource;
@model UrbanBooks.Entity.UsersModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/bundles/kendo-css")
    @Scripts.Render("~/bundles/common")
    @Styles.Render("~/bundles/common-css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <title>@Label.UrbanBooks</title>
    <link rel="shortcut icon" href="~/Images/open-book.png" />
    <style>
        label {
            font-size: 13px;
        }
    </style>
</head>
<body class="login-form">
    @Html.Partial("_Notification")
    <div class="wrapper">
        @using (Html.BeginForm("DoLogin", ControllerHelper.Login, FormMethod.Post, new { @class = "login", role = "form" }))
        {
            <div class="width-full" style="text-align:center">
                <img src="~/Images/logo.jpg" alt="" style="width:200px;height:50px;">
            </div>
            <div class="width-full" style="text-align:center">
                <p class="title">@*@Label.UrbanBooks <br />*@ <span style="font-size:14px; color:#999999">@Label.LoginToYourAccount</span></p>
            </div>
            <div class="width-full" style="text-align:center"></div>
            <div class="width-full">
                @Html.TextBoxFor(m => m.EmailAddress, new { @placeholder = "Email", @autofocus = "" })
                <div class="form-control-login">
                    <i class="icon-envelope text-muted"></i>
                </div>
                @Html.ValidationMessageFor(m => m.EmailAddress)
            </div>
            <div class="width-full">
                @Html.TextBoxFor(m => m.Password, new { @placeholder = "Password", type = "password" })
                <div class="form-control-login">
                    <i class="icon-key text-muted"></i>
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="width-half">
                @Html.CheckBoxFor(x => x.RememberMe, new { @checked = "checked" })
                @Html.LabelFor(m => m.RememberMe)
            </div>
            <div class="width-full" style="margin-top:5px;">
                <button type="submit">Login&nbsp;<i class="icon-circle-right2 position-right"></i></button>
            </div>
            <div class="width-full" style="text-align:center; font-size:14px; height:15px; margin-top:0px; color:#FF0000">
                @ViewBag.Message
            </div>
        }
    </div>
    <div id="divLoading" class="loading" style="display:none">
        <div class="k-loading-image"></div>
    </div>
</body>
</html>
<script>
    $(document).ready(function () { $("input[type='hidden'][name='RememberMe']").remove() });
</script>