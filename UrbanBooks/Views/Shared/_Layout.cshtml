@using UrbanBooks.Common
@using System.Web.Optimization;
@using System.Web.Mvc;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Urban Books</title>
    <link rel="shortcut icon" href="~/favicon.ico" />
    @Styles.Render("~/bundles/Client-css")
    @Scripts.Render("~/bundles/Client-Script")
    @*<style type="text/css">
            .clsFooter {
                background-color: #f8f8f8;
            }
        </style>*@
</head>
<body>
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Urban Books</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="#">HOME</a></li>
                    <li><a href="#">FAQ</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="content-wrapper">
        <div class="body-content">
            @RenderBody()
        </div>
        <div class="footer text-muted" style="text-align:center">
            © @DateTime.Now.Year. Urban Books. All Rights Reserved.
        </div>
    </div>
</body>
</html>
